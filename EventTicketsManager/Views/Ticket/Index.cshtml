@model TicketIndexModel

@{
    ViewData["Title"] = "Index";
    var i = 0;
}

    <h1>Your events</h1>

<p>
    <h4>Select your event to create or see tickets.</h4>
    <hr/>
</p>

@foreach (var item in Model.UserEvents)
{
    if (i % 5 == 0)
    {
        @Html.Raw("<div class='card-group'>")
    }


    <div class="card text-white bg-dark mb-3" style="width: 20rem; margin: 5px;">
        <div class="card-header">@item.Name</div>
        <div class="card-body">
            @Html.ActionLink("Add Ticket", "Create", new { id = item.Id }, new { @class = "btn btn-light btn-lg btn-block" })
            @Html.ActionLink("See Tickets", "List", new { id = item.Id }, new { @class = "btn btn-light btn-lg btn-block" })
            @Html.ActionLink("Search Tickets", "Search", new { id = item.Id }, new { @class = "btn btn-light btn-lg btn-block" })
        </div>

    </div>

    if (i % 5 == 4)
    {
        @Html.Raw("</div>")
    }
    i++;
}

@if (i % 5 != 0)
{
    @Html.Raw("</div>")
}